# Stellex Bank - Production Environment Variables
# Copy this file to .env.local and fill in your actual values

# ===========================================
# TELEGRAM CONFIGURATION
# ===========================================
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/webhook

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Get from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# ===========================================
# API CONFIGURATION
# ===========================================
# Generate a secure API key for external services
API_KEY=your-secure-api-key-here
API_SECRET=your-api-secret-here

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_APP_NAME=Stellex Bank
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_ENVIRONMENT=production

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Generate secure random strings
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here
SESSION_SECRET=your-session-secret-here

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# CARD CONFIGURATION
# ===========================================
# Card number prefix for Stellex Bank
CARD_PREFIX=666
# Maximum cards per user
MAX_CARDS_PER_USER=3
# Card verification code expiry (minutes)
VERIFICATION_CODE_EXPIRY=5

# ===========================================
# PAYMENT CONFIGURATION
# ===========================================
# Telegram Stars to RUB conversion rate
TELEGRAM_STARS_TO_RUB_RATE=10
# Minimum transaction amount (in RUB)
MIN_TRANSACTION_AMOUNT=1
# Maximum transaction amount (in RUB)
MAX_TRANSACTION_AMOUNT=100000

# ===========================================
# NOTIFICATION CONFIGURATION
# ===========================================
# Enable/disable notifications
ENABLE_NOTIFICATIONS=true
# Notification retry attempts
NOTIFICATION_RETRY_ATTEMPTS=3
# Notification timeout (ms)
NOTIFICATION_TIMEOUT=5000

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info
# Enable request logging
ENABLE_REQUEST_LOGGING=true
# Log file path
LOG_FILE_PATH=./logs/app.log

# ===========================================
# MONITORING CONFIGURATION
# ===========================================
# Enable health checks
ENABLE_HEALTH_CHECKS=true
# Health check interval (ms)
HEALTH_CHECK_INTERVAL=30000
# Enable metrics collection
ENABLE_METRICS=true

# ===========================================
# CACHE CONFIGURATION
# ===========================================
# Redis URL for caching (optional)
REDIS_URL=redis://localhost:6379
# Cache TTL (seconds)
CACHE_TTL=300
# Enable caching
ENABLE_CACHE=true

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Database connection pool size
DB_POOL_SIZE=10
# Database connection timeout (ms)
DB_CONNECTION_TIMEOUT=30000
# Enable query logging
ENABLE_QUERY_LOGGING=false

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# External payment processor (optional)
PAYMENT_PROCESSOR_URL=
PAYMENT_PROCESSOR_API_KEY=
# External notification service (optional)
NOTIFICATION_SERVICE_URL=
NOTIFICATION_SERVICE_API_KEY=

# ===========================================
# DEVELOPMENT/DEBUGGING
# ===========================================
# Enable debug mode
DEBUG=false
# Enable API documentation
ENABLE_API_DOCS=true
# Enable test endpoints
ENABLE_TEST_ENDPOINTS=false

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================
# Vercel deployment URL
VERCEL_URL=https://your-app.vercel.app
# Vercel environment
VERCEL_ENV=production
# Node environment
NODE_ENV=production

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
# Enable automatic backups
ENABLE_BACKUPS=true
# Backup frequency (hours)
BACKUP_FREQUENCY=24
# Backup retention (days)
BACKUP_RETENTION_DAYS=30

# ===========================================
# COMPLIANCE CONFIGURATION
# ===========================================
# Enable audit logging
ENABLE_AUDIT_LOGGING=true
# Data retention period (days)
DATA_RETENTION_DAYS=2555
# Enable GDPR compliance
ENABLE_GDPR_COMPLIANCE=true
